{
  "version": "1.0.0",
  "description": "Flow diagram configuration for node positioning, connections, and display settings",

  "container": {
    "maxWidth": "1800px",
    "minHeight": "1800px",
    "padding": "2rem"
  },

  "nodes": {
    "dimensions": {
      "minWidth": "200px",
      "maxWidth": "260px",
      "padding": "1.2rem 1.5rem",
      "borderRadius": "8px",
      "borderWidth": "2px"
    },
    "positions": [
      {
        "id": "node-0",
        "step": 0,
        "type": "start",
        "position": { "top": "30px", "left": "50%", "transform": "translateX(-50%)" },
        "label": "User Input",
        "hasCodeBox": false
      },
      {
        "id": "node-1",
        "step": 1,
        "type": "standard",
        "position": { "top": "200px", "left": "28%" },
        "label": "Requirement Analysis",
        "codeBoxId": "code-1",
        "hasCodeBox": true
      },
      {
        "id": "node-2",
        "step": 2,
        "type": "standard",
        "position": { "top": "400px", "left": "20%" },
        "label": "Historical Match",
        "codeBoxId": "code-2",
        "hasCodeBox": true
      },
      {
        "id": "node-3",
        "step": 3,
        "type": "decision",
        "position": { "top": "600px", "left": "35%" },
        "label": "Auto-Select",
        "hasCodeBox": false
      },
      {
        "id": "node-4",
        "step": 4,
        "type": "standard",
        "position": { "top": "820px", "left": "8%" },
        "label": "Impacted Modules",
        "codeBoxId": "code-3",
        "hasCodeBox": true
      },
      {
        "id": "node-5",
        "step": 4,
        "type": "standard",
        "position": { "top": "820px", "right": "8%" },
        "label": "Estimation Effort",
        "codeBoxId": "code-4",
        "hasCodeBox": true,
        "parallel": true
      },
      {
        "id": "node-6",
        "step": 5,
        "type": "standard",
        "position": { "top": "1060px", "left": "22%" },
        "label": "TDD Generation",
        "codeBoxId": "code-5",
        "hasCodeBox": true
      },
      {
        "id": "node-7",
        "step": 6,
        "type": "standard",
        "position": { "top": "1300px", "right": "22%" },
        "label": "Jira Stories",
        "codeBoxId": "code-6",
        "hasCodeBox": true
      },
      {
        "id": "node-8",
        "step": 7,
        "type": "disabled",
        "position": { "top": "1540px", "left": "15%" },
        "label": "Code Impact",
        "hasCodeBox": false,
        "disabled": true
      },
      {
        "id": "node-9",
        "step": 7,
        "type": "disabled",
        "position": { "top": "1540px", "right": "15%" },
        "label": "Risk Assessment",
        "hasCodeBox": false,
        "disabled": true
      }
    ]
  },

  "codeBoxes": {
    "dimensions": {
      "maxWidth": "350px",
      "maxHeight": "320px",
      "padding": "1rem",
      "paddingTop": "2.5rem",
      "borderRadius": "6px",
      "borderWidth": "2px"
    },
    "positions": [
      {
        "id": "code-1",
        "nodeId": "node-1",
        "position": { "top": "180px", "right": "8%" }
      },
      {
        "id": "code-2",
        "nodeId": "node-2",
        "position": { "top": "380px", "right": "10%" }
      },
      {
        "id": "code-3",
        "nodeId": "node-4",
        "position": { "top": "800px", "left": "52%" }
      },
      {
        "id": "code-4",
        "nodeId": "node-5",
        "position": { "top": "800px", "right": "52%" }
      },
      {
        "id": "code-5",
        "nodeId": "node-6",
        "position": { "top": "1040px", "right": "8%" }
      },
      {
        "id": "code-6",
        "nodeId": "node-7",
        "position": { "top": "1280px", "left": "8%" }
      }
    ]
  },

  "connections": {
    "main": [
      ["node-0", "node-1"],
      ["node-1", "node-2"],
      ["node-2", "node-3"],
      ["node-3", "node-4"],
      ["node-3", "node-5"],
      ["node-4", "node-6"],
      ["node-5", "node-6"],
      ["node-6", "node-7"],
      ["node-7", "node-8"],
      ["node-7", "node-9"]
    ],
    "codeBox": [
      ["node-1", "code-1"],
      ["node-2", "code-2"],
      ["node-4", "code-3"],
      ["node-5", "code-4"],
      ["node-6", "code-5"],
      ["node-7", "code-6"]
    ],
    "style": {
      "strokeWidth": 2,
      "dashArray": "5 5",
      "mainColor": "#24292f",
      "codeColor": "#8250df",
      "curveIntensity": 0.5,
      "horizontalOffset": 0.3
    }
  },

  "animations": {
    "nodeEntrance": {
      "duration": "0.4s",
      "easing": "ease",
      "from": { "opacity": 0, "scale": 0.8 },
      "to": { "opacity": 1, "scale": 1 }
    },
    "lineAnimation": {
      "duration": "40s",
      "easing": "linear",
      "infinite": true,
      "keyframes": { "to": { "strokeDashoffset": -1000 } }
    },
    "iconPulse": {
      "duration": "2s",
      "easing": "ease-in-out",
      "infinite": true,
      "keyframes": {
        "0%": { "opacity": 1, "scale": 1 },
        "50%": { "opacity": 0.7, "scale": 1.1 },
        "100%": { "opacity": 1, "scale": 1 }
      }
    },
    "codeBoxToggle": {
      "duration": "0.4s",
      "easing": "ease",
      "properties": ["opacity", "visibility"]
    }
  },

  "colors": {
    "nodes": {
      "standard": {
        "background": "#ddf4ff",
        "border": "#54aeff",
        "borderActive": "#0969da",
        "text": "#24292f"
      },
      "decision": {
        "background": "#fff8c5",
        "border": "#d4a72c",
        "text": "#24292f"
      },
      "disabled": {
        "background": "#f6f8fa",
        "border": "#d0d7de",
        "text": "#24292f"
      }
    },
    "codeBox": {
      "background": "#f6f8fa",
      "border": "#8250df",
      "text": "#24292f",
      "highlight": "#0969da"
    },
    "badge": {
      "background": "rgba(9, 105, 218, 0.12)",
      "text": "#0969da"
    },
    "infoIcon": {
      "background": "rgba(130, 80, 223, 0.15)",
      "text": "#8250df"
    }
  },

  "interactions": {
    "stepDuration": 2500,
    "keyboard": {
      "next": ["ArrowRight", "Space"],
      "previous": ["ArrowLeft"],
      "reset": ["r", "R"],
      "autoPlay": ["a", "A"]
    },
    "hover": {
      "enabled": true,
      "scale": 1.02,
      "shadow": "0 2px 8px rgba(9, 105, 218, 0.2)"
    },
    "click": {
      "toggleCodeBox": true,
      "highlightNode": true
    }
  },

  "responsive": {
    "breakpoint": "1200px",
    "mobile": {
      "stackVertically": true,
      "hideConnections": true,
      "centerElements": true,
      "maxWidth": "90%",
      "margin": "1.5rem auto"
    }
  },

  "controls": {
    "position": "fixed-bottom",
    "buttons": [
      { "id": "prev", "label": "Previous", "type": "default" },
      { "id": "next", "label": "Next", "type": "primary" },
      { "id": "reset", "label": "Reset", "type": "default" },
      { "id": "autoPlay", "label": "Auto Play", "type": "default" }
    ],
    "styling": {
      "padding": "1.5rem 2rem",
      "background": "#ffffff",
      "borderTop": "1px solid #d0d7de",
      "shadow": "0 -2px 8px rgba(0, 0, 0, 0.05)"
    }
  },

  "totalSteps": 7,

  "notes": {
    "curveAlgorithm": "Cubic bezier curves with dynamic control points based on connection direction",
    "progressiveDisclosure": "Steps are revealed sequentially with highlighted active node",
    "codeBoxBehavior": "Hidden by default, shown on node click, automatically hidden when navigating backwards",
    "connectionLogic": "Dashed lines animate from source to target, only visible when both nodes are shown"
  }
}
